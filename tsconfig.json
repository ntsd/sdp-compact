{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "skipLibCheck": true,
        "declaration": true
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "jest.config.ts",
    ]
}